page {
  background-color: black;
  color: white;
}
.top {
  height:195px;
  line-height:195px;
  text-align:right;
  font-size:100px;
  font-weight:900;

}
.group {
  display: flex;
  flex-direction: row;
  height: 80px;
}
.item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.item:active {
    background-color: pink;
}
.equal {
  height: 160px;
  background-color: rgb(64,224,208);
}
.zero {
  width: 50%;
}
.group-top {
  border-top: 1px solid white;
}
.item-right {
  border-right: 1px solid white;
}
.item-bottom {
  border-bottom: 1px solid white;
}

